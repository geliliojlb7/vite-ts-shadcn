    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.21.1",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.4.3",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.10.5",
    "@types/react": "18.2.45",
    "@types/react-dom": "^18.2.18",
